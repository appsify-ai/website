---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import Buildersvg from "./buildersvg.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 dark:text-white">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <!-- <Buildersvg /> -->
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter dark:text-white">
      Build Apps at lightning speed
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl dark:text-slate-400">
      Appsify is a AI First low-code builder that enables you to build and ship
      the most performant web apps at lightning speed. <wbr /> Powered by SolidJS
      and WebComponents under the hood for performance and future proof. Built with
      <span class="text-red-500">❤️</span> and is completely open source
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link
        href="#"
        href=""
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

        Download for Free
      </Link> -->
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/appsify-ai"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </div>
</main>
